#include <stdio.h>

int impar(int vet[], int tam){
	
	int i;
	
	int qtdImpares = 0;
	
	for(i=0;i<tam;i++){
		
		if(vet[i] % 2 != 0){
			qtdImpares = qtdImpares+1;
		}
	} 
	
	return qtdImpares;
	
}

int main(){
	
	int i, v[100], t, soma;
	
	printf("Quantos valores voce deseja adicionar ao vetor: ");
	scanf("%D",&t);
	
	for(i=0;i<t;i++){
		printf("Digite um valor para a posicao %d do vetor: ",i);
		scanf("%d",&v[i]);
	}
	
	printf("Valores do vetor: \n");
	
	for(i=0;i<t;i++){
		printf("\nVetor %d: %d\n", i + 1, v[i]);
	}
	
	soma = impar(v, i);
	
	printf("\nQuantidade de numeros impares: %d",soma);
	
	return 0;
	
}
